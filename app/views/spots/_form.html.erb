<%= simple_form_for @spot, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :availability %>
  <%= f.association :type %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                spots_path, :class => 'btn btn-default' %>
<% end %>
